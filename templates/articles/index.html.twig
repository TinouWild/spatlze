{% extends 'base.html.twig' %}

{% block title %}Fix.R{% endblock %}

{% block body %}


    {% for recentarticle in recentarticle %}
<div class="d-flex align-baseline" style="background-image: url('{{ recentarticle.headPicture }}'); background-size: cover; height: 400px">
    <div class="container text-light">
        <h1>{{ recentarticle.title }}</h1>
        <p> Article du {{ recentarticle.date ? recentarticle.date|date('d-m-Y') : '' }} </p>
    </div>
</div>
<div class="container">

    {% endfor %}

    <div class="container mt-3">
        <div class="row">
            {% for article in articles %}
                <div class="col">
                            <a href="{{ path('articles_show', {'slug': article.slug}) }}"><div class="" style="background-image: url({{ article.headPicture }}); background-size : cover; height: 200px; width: 300px">
                                <div class="header text-light h3 ml-2">{{ article.title }}</div>
                            </div></a>
                </div>
            {% else %}
                <div colspan="6">no records found</div>

            {% endfor %}

        </div>
    </div>

    {% endblock %}